      <%= link_to dashboards_path do %>
        <i class="fa-solid fa-arrow-left fa-lg"></i>
      <% end %>
    </div>
    <div class="icon-exercices">
      <i class="fa-solid fa-dumbbell fa-2xl"></i>
    </div>
  </div>

  <div class="exercice">
